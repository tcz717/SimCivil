<Window x:Class="SimCivil.IntegrationTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimCivil.IntegrationTest"
        mc:Ignorable="d"
        Title="SimCivil集成测试器" Height="800" Width="1024" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Content="Orleans 集群日志" />
        <Label Grid.Column="2" Content="Gate 服务器日志" />
        <TextBox x:Name="ClusterTextBox" Grid.Column="1"  TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Grid.Row="1"/>
        <TextBox x:Name="GateTextBox" Grid.Column="2"  TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Grid.Row="1"/>

    </Grid>
</Window>
